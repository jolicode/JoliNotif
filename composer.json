{
    "name": "jolicode/jolinotif",
    "description": "Send desktop notifications on Windows, Linux, MacOS.",
    "keywords": ["notification", "windows", "linux", "mac", "growl"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "LoÃ¯ck Piera",
            "email": "pyrech@gmail.com"
        }
